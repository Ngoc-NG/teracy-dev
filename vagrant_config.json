      //"auto_config":true, // for private_network mode + ip
      //"bridge": "en1: Wi-Fi (AirPort)" // for public_network mode
    }
  ],
  "vm_synced_folders":[ //see: http://docs.vagrantup.com/v2/synced-folders/index.html
