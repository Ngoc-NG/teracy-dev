{
  //"vm_box":"teracy/dev",
  "vm_box": "ubuntu/trusty64",
  //"vm_box_url":"http://opscode-vm-bento.s3.amazonaws.com/vagrant/virtualbox/opscode_ubuntu-14.04_chef-provisionerless.box",
  "vm_box_version": "",
  "vm_forward_agent":true,
  "vm_networks": [
    { // see: http://docs.vagrantup.com/v2/networking/index.html
      "mode":"public_network" // one of "forwarded_port", "private_network" or "public_network"
      //by default, 192.168.99.100 is used for Boot2Docker
      // for convention, use 192.168.99.101 for teracy-dev, 192.168.99.102 for teracy-staging, etc.
      //"ip": "" // for private_network, public_network mode
      //"type":"dhcp", // for private_network mode; if ip and type are both defined, ip takes precedence
      //"auto_config":true, // for private_network mode + ip
      //"bridge": "en0: Wi-Fi (AirPort)" // for public_network mode
    }
  ],
  "vm_synced_folders":[ //see: http://docs.vagrantup.com/v2/synced-folders/index.html
    // {
    //   "type":"virtual_box", // virtual_box, "nfs", "rsync" or "smb", incase smb mount failed,
    //                         // ssh to vm and install cifs-utils allow vm mount smb directory
    //                         // mount.cifs needs to be used with dir_mode file_mode instead of dmode fmode
    //                         // Windows 7 needs powershell 3.0 to create smb share on windows
    //                         // http://www.microsoft.com/en-us/download/details.aspx?id=34595
    //   "host":"./docker",
    //   "guest":"/var/lib/docker/",
    //   "mount_options":[
    //     "dmode=775",
    //     "fmode=755"
    //   ]
    // },
    //TODO: how to keep and reused existing Docker images after destroying the VM?
    // or even attaching the existing data into it, so that developers should share the Docker images
    {
      "type":"rsync",
      "host":"./workspace",
      "guest":"/home/vagrant/workspace",
      "rsync__exclude": [".git", ".idea/", "node_modules/", "bower_components/", ".npm/"]
    }
    //disable .virtualenvs mapping due to this: https://issues.teracy.org/browse/DEV-116
    //to enable this, configure vm_sync_folders on vagrant_config_override.json
    //WARNING: enable this will cause bad performance impact of the Python apps
    // {
    //   "host":"./home/.virtualenvs",
    //   "guest":"/home/vagrant/.virtualenvs",
    //   "supports": ["linux", "mac"],
    //   "mount_options":[
    //     "dmode=755",
    //     "fmode=755"
    //   ]
    // },
    //disable .ssh mapping due to this: https://issues.teracy.org/browse/DEV-162
    // {
    //   "host":"./home/.ssh",
    //   "guest":"/home/vagrant/.ssh",
    //   "mount_options":[
    //     "dmode=775",
    //     "fmode=600"
    //   ]
    // }
  ],
  "vb":{ //virtualbox settings from https://www.virtualbox.org/manual/ch08.html#vboxmanage-modifyvm
    //"gui":true,
    //"name":"teracy-dev",
    "memory":2048,
    //"cpus":1,
    "description":"teracy-dev #{Time.now.getutc.to_i}"
  },
  "chef": {
    "enabled":true
  },
  "chef_log_level":"info", //one of debug, info, warn, error, fatal. Default: info
  "chef_cookbooks":[
    "vendor-cookbooks",
    "main-cookbooks"
  ],
  "chef_role":"roles",
  "chef_nodes":"nodes",
  "chef_bags_path":"data_bags",
  "chef_recipes":[
    "vim",
    "teracy-dev"
  ],
  "chef_json":{
    "teracy-dev":{
      "directories":[
        {
          "path": "/home/vagrant/workspace",
          "owner": "vagrant",
          "group": "vagrant",
          "mode": "0775",
          "action": "create" // one of create, delete, nothing. Default: create.
          // See more: https://docs.chef.io/resource_directory.html
        }
      ],
      "alias": [
        {
          "name": "ws",
          "command": "cd ~/workspace",
          "action": "add" // one of add, remove. Default: add.
          // See more: https://github.com/customink-webops/magic_shell/blob/master/resources/alias.rb
        }
      ],
      "env": [
        {
          "key": "EDITOR",
          "value": "vim",
          "action": "create" // one of create, delete, modify, nothing. Default: create.
          // See more: https://docs.chef.io/resource_env.html
        },
        {
          "key": "TERACY_DEV",
          "value": "v0.5.0",
          "action": "delete"
        }
      ]
    }
  }
